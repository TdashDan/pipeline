# http://editorconfig.org
root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# Correct EClint comment behaviour
block_comment_start = /**
block_comment = *
block_comment_end = */

[*.md]
max_line_length = off
trim_trailing_whitespace = false

[config.xml]
indent_size = 4
